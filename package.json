{
  "name": "eslint-config-handpear",
  "description": "specific rules for ESLint",
  "version": "1.2.3",
  "author": "handpear<handpear@outlook.com>",
  "license": "MIT",
  "main": "index.js",
  "files": [
    "index.js",
    "base.js",
    "react.js",
    "vue.js",
    "typescript.js"
  ],
  "keywords": [
    "eslint",
    "eslint-config",
    "eslint-config-handpear",
    "handpear"
  ],
  "homepage": "https://github.com/Handpear/eslint-config-handpear.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/Handpear/eslint-config-handpear.git"
  },
  "bugs": {
    "url": "https://github.com/Handpear/eslint-config-handpear/issues"
  },
  "packageManager": "pnpm@8.6.5",
  "engines": {
    "node": ">=16",
    "pnpm": ">=8.6.5"
  },
  "scripts": {
    "docs:dev": "vitepress dev",
    "docs:build": "vitepress build --base /",
    "docs:preview": "vitepress preview",
    "build": "ts-node scripts/build.ts",
    "release": "pnpm build && pnpm publish --no-git-checks",
    "type:check": "tsc --noEmit --skipLibCheck",
    "clean:lib": "rimraf -g **/node_modules",
    "lint": "pnpm lint:eslint && pnpm lint:prettier",
    "lint:eslint": "eslint --ext \"**/*.{js,jsx,mjs,cjs,ts,tsx,mts,cts,vue}\" --ignore-pattern \"bad.*\" .",
    "lint:prettier": "prettier --write .",
    "lib:up": "taze -I -r --exclude pnpm,typescript,vitepress"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/eslint-parser": "^7.23.3",
    "@babel/preset-react": "^7.23.3",
    "@types/eslint": "^8.44.7",
    "@types/node": "^20.9.4",
    "@types/prettier": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-vue": "^9.18.1",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "rimraf": "^5.0.5",
    "taze": "^0.11.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitepress": "1.0.0-beta.7",
    "vue": "^3.3.8",
    "vue-eslint-parser": "^9.3.2"
  },
  "peerDependencies": {
    "@babel/eslint-parser": "7.x",
    "@babel/preset-react": "7.x",
    "@typescript-eslint/eslint-plugin": ">=6.7.0",
    "@typescript-eslint/parser": ">=6.7.0",
    "eslint": ">=8.24.0",
    "eslint-plugin-react": ">=7.32.0",
    "eslint-plugin-vue": ">=9.9.0",
    "typescript": ">=4.7.4",
    "vue-eslint-parser": "9.x"
  },
  "peerDependenciesMeta": {
    "@babel/eslint-parser": {
      "optional": true
    },
    "@babel/preset-react": {
      "optional": true
    },
    "@typescript-eslint/eslint-plugin": {
      "optional": true
    },
    "@typescript-eslint/parser": {
      "optional": true
    },
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-vue": {
      "optional": true
    },
    "typescript": {
      "optional": true
    },
    "vue-eslint-parser": {
      "optional": true
    }
  }
}
